<header class="css-body-header">
  <%= render partial: 'shared/index_page_header',
             locals: { locals: { title: "#{locals[:num_channels]} #{'Channel'.pluralize(locals[:num_channels])} in #{locals[:num_teams]} #{'Team'.pluralize(locals[:num_teams])}",
                                 pagination_collection: locals[:teams]
                               }
                     }
  %>
</header>

<main class="css-body-main">
  <div class="container">
    <hr>
    <% locals[:teams].each do |installation| %>
      <%= render partial: 'channels/admin_views/index_team',
                 locals: { locals: { team: installation,
                                     shared_channels: Installation.shared_team_channels(slack_team_id: installation.slack_team_id),
                                   }
                         }
      %>
    <% end %>
    </div>
</main>
