<header class="css-body-header">
  <%= render partial: 'shared/index_page_header',
             locals: { locals: { title: 'Admin Dashboard - Channels' } }
  %>
</header>

<main class="css-body-main">
  <div class="container">
    <h2><%= "#{locals[:team_channels].length} Active #{'Channel'.pluralize(locals[:team_channels].length)} " %>
        <%= "in #{locals[:teams].length} #{'Team'.pluralize(locals[:teams].length)}"  %></h2>
    <hr>
    <% locals[:teams].each do |installation| %>
      <%= render partial: 'channels/admin_views/index_team',
                 locals: { locals: { team: installation,
                                     shared_channels: Channel.shared_team_channels(slack_team_id: installation.slack_team_id),
                                   }
                         }
      %>
    <% end %>
    </div>
</main>
