<% active_channels = locals[:shared_channels].length + locals[:bot_channels].length %>
<h3><%= "Active Channels(#{active_channels}) for Team #{locals[:team].auth_json['info']['team']}" %></h3>
<% unless active_channels == 0 %>
  <table class="table table-bordered table-hover">
    <span style="font-size: 1.2em;"><%= "Shared Channels(#{locals[:shared_channels].length})" %></span>
    <thead>
      <tr>
        <th>Name</th>
        <th>Slack Chan Id</th>
        <th>Created by</th>
        <th>Archived?</th>
        <th>Deleted</th>
        <th>Added To MiaDo on Date</th>
        <th>Last Updated Date</th>
        <th>Tasks</th>
      </tr>
    </thead>
    <tbody>
      <% locals[:shared_channels].each do |channel| %>
        <%= render partial: 'channels/admin_views/index_shared_channel',
                   locals: { locals: { channel: channel,
                                       items: ListItem.items(slack_team_id: channel.slack_team_id,
                                                             slack_channel_id: channel.slack_channel_id)
                                     }
                           }
        %>
      <% end %>
    </tbody>
  </table>

  <table class="table table-bordered table-hover">
    <span style="font-size: 1.2em;"><%= "Bot Channels(#{locals[:bot_channels].length})" %></span>
    <thead>
      <tr>
        <th>Name</th>
        <th>Slack Chan Id</th>
        <th>Dm User Id</th>
        <th>Archived?</th>
        <th>Deleted</th>
        <th>Added To MiaDo on Date</th>
        <th>Last Updated Date</th>
        <th>Tasks</th>
      </tr>
    </thead>
    <tbody>
      <% locals[:bot_channels].each do |channel| %>
        <%= render partial: 'channels/admin_views/index_shared_channel',
                   locals: { locals: { channel: channel,
                                       items: ListItem.items(slack_team_id: channel.slack_team_id,
                                                             slack_channel_id: channel.slack_channel_id)
                                     }
                           }
        %>
      <% end %>
    </tbody>

  </table>
  <% end %>
<br>
