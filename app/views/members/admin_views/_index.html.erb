<header class="css-body-header">
  <%= render partial: 'shared/index_page_header',
             locals: { locals: { title: 'Admin Dashboard - Members' } }
  %>
</header>

<main class="css-body-main">
  <div class="container">
    <h2><%= "#{locals[:members].length} Members in #{locals[:teams].length} Teams"  %></h2>
    <hr>
    <% locals[:teams].each do |installation| %>
      <%= render partial: 'members/admin_views/index_team',
                 locals: { locals: { team: installation,
                                     members: Member.team_members(slack_team_id: installation.slack_team_id)
                                   }
                         }
      %>
    <% end %>
    </div>
</main>
