<header class="css-body-header">
  <%= render partial: 'shared/index_page_header',
             locals: { locals: { title: 'Admin Dashboard - Channel Task Lists' } }
  %>
</header>

<main class="css-body-main">
  <div class="container">
    <h2><%= "#{locals[:items].length} Tasks in #{locals[:channels].length} Channels in #{locals[:teams].length} Teams"  %></h2>
    <hr>
    <% locals[:teams].each do |installation| %>
      <%= render partial: 'items/admin_views/index_team',
                 locals: { locals: { installation: installation,
                                     auth_info: installation.auth_json['info'],
                                     items: ListItem.items(slack_team_id: installation.slack_team_id),
                                   }
                         }
      %>
    <% end %>
    </div>
</main>
