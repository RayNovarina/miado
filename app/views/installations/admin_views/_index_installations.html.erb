<header class="css-body-header">
  <%= render partial: 'shared/index_page_header',
             locals: { locals: { title: "#{locals[:total_installations]} Installations of #{locals[:bot_info][:name]}, #{locals[:total_teams]} teams.",
                                 pagination_collection: locals[:installations]
                               }
                     }
  %>
</header>

<main class="css-body-main">
  <div class="container">
    <% locals[:installations].each do |installation| %>
      <%= render partial: 'installations/admin_views/index_installation_team',
                 locals: { locals: { installation: installation,
                                     auth_info: installation.auth_json['info'],
                                   }
                         }
      %>
    <% end %>
    </div>
</main>
